                <!-- Category filters -->
                <!-- <ul>
                    <% categories.forEach(category => { %>
                        <li><a class="category-label" href="/search?category=<%= category.category %>"><%= category.category %> <%= category.count %></a></li>
                    <% }); %>
                </ul> -->
                <ul>
                    <% categories.forEach(category => { %>
                        <% const categoryCount = results.filter(product => product.category === category.category).length; %>
                        <% if (categoryCount > 0) { %>
                            <li><a class="category-label" href="/search?category=<%= category.category %>"><%= category.category %> <%= categoryCount %></a></li>
                        <% } %>
                    <% }); %>
                </ul>
            </div>
            <div class="right-panel">
            <div class="search-filters">
                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" id="sortDropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      SIRALA
                    </button>
                    <div class="dropdown-menu" aria-labelledby="sortDropdownMenuButton">
                        <label class="dropdown-item">
                            <input type="radio" name="sortOption" value="lowToHigh" checked> En düşük fiyat
                        </label>
                        <label class="dropdown-item">
                            <input type="radio" name="sortOption" value="highToLow"> En yüksek fiyat
                        </label>
                    </div>
                </div>

                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" id="sizeDropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        BEDEN
                    </button>
                    <div class="dropdown-menu" aria-labelledby="sizeDropdownMenuButton">
                        <% let sizex = {}; %>
                        <% results.forEach(product => { %>
                            <% if (product.size) { %>
                                <% product.size.split(',').forEach(size => { %>
                                    <% if (!sizex[size.trim()]) { %>
                                        <% sizex[size.trim()] = true; %>
                                        <label class="dropdown-item">
                                            <input type="checkbox" name="sizeOption" value="<%= size.trim() %>"> <%= size.trim() %>
                                        </label>
                                    <% } %>
                                <% }); %>
                            <% } %>
                        <% }); %>
                    </div>
                </div>
                
            </div>
            
           


                <!-- Search results -->
                
                <% if (results.length === 0) { %>
                    <p>No results found.</p>
                <% } else { %>
                    <div class="row">
                        <% results.forEach(product => { %>
                            <div class="col-md-3">
                                <div class="card search-card" data-size="<%= product.size %>">
                                    <!-- <img src="<%= product.img_url %>" class="card-img-top" alt="<%= product.name %>"> -->
