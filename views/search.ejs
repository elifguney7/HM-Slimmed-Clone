<script>
// Filter by size
document.addEventListener('DOMContentLoaded', function() {
    const checkboxes = document.querySelectorAll('input[name="sizeOption"]');
    checkboxes.forEach(function(checkbox) {
        checkbox.addEventListener('change', function() {
            const selectedSizes = Array.from(checkboxes)
                .filter(cb => cb.checked)
                .map(cb => cb.value);
            filterProducts(selectedSizes);
        });
    });

    function filterProducts(selectedSizes) {
        const products = document.querySelectorAll('.search-card');
        products.forEach(function(product) {
            const sizes = product.dataset.size.split(',').map(s => s.trim());
            const match = selectedSizes.some(size => sizes.includes(size));
            if (selectedSizes.length === 0 || match) {
                product.parentNode.style.display = 'block';
            } else {
                product.parentNode.style.display = 'none';
            }
        });
    }

           // Sort by price
           const sortDropdown = document.getElementById('sortDropdownMenuButton');
        const sortOptions = document.querySelectorAll('input[name="sortOption"]');
        sortOptions.forEach(function(option) {
            option.addEventListener('change', function() {
                const sortOption = document.querySelector('input[name="sortOption"]:checked').value;
                sortProducts(sortOption);
            });
        });

        function sortProducts(sortOption) {
            const products = Array.from(document.querySelectorAll('.search-card'));
            const sortedProducts = products.sort(function(a, b) {
                const priceA = parseFloat(a.querySelector('.card-text').textContent);
                const priceB = parseFloat(b.querySelector('.card-text').textContent);
                if (sortOption === 'lowToHigh') {
                    return priceA - priceB;
                } else if (sortOption === 'highToLow') {
                    return priceB - priceA;
                } else {
                    return 0; // Default sorting (recommended or no sorting)
                }
            });

            const searchContent = document.querySelector('.search-content .row');
            searchContent.innerHTML = ''; // Clear existing products

            sortedProducts.forEach(function(product) {
                searchContent.appendChild(product.parentNode); // Append sorted products back
            });
        }
});


    </script>
